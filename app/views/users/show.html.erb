<div class="row">
  <!---------------------------左画面---------------------------->
  <div class="col-lg-3">
    <%= render "users/user_info_and_new_book", new_book:@new_book, user:@user %>
  </div>

  <div class="col-lg-1">
  </div>

  <!--------------------------------------右画面-------------------------------------------->
  <div class="col-lg-8">
    <h1>Books</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill,40, 40, format: "jpeg", fallback: "no_image.jpg", size:"40x40" %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


