<!-----------------------右画面(元になるview)----------------------->
<div>
  <h1>User info</h1>
  <%= attachment_image_tag user_info, :profile_image, :fill, 80, 80, format: "jpeg", fallback: "no_image.jpg", size:"80x80" %>
  <table class="table mt-3">
    <tr>
      <th>name</th>
      <th><%= user_info.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user_info.introduction %></th>
    </tr>
  </table>
  <%= link_to edit_user_path(current_user.id) do %>
    <button type="button" class="btn btn-outline-secondary w-100 py-0">
      <i class="fas fa-user-cog"></i>
    </button>
  <% end %>
</div>


<div class="mt-3">
  <h1>New book</h1>
  <%= form_with model:new_book, url: books_path, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Title" %><br/>
      <%= f.text_field :title %>
    </div>
    <div class="mb-3">
      <%= f.label :body, "Opinion" %><br/>
      <%= f.text_area :body %>
    </div>
    <%= f.submit "Create Book", class:"btn btn-success" %>
  <% end %>
</div>