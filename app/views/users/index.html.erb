<div class="row">
  <!---------------------------左画面---------------------------->
  <div class="col-lg-3">
    <%= render "users/user_info_and_new_book", new_book:@new_book, user_info:@user_info %>
  </div>

  <div class="col-lg-1">
  </div>

  <!-------------------------右画面------------------------------->
  <div class="col-lg-8">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", size:"40x40" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "show", user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>