<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <!-------------- ヘッダーナビゲーション --------------->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>  <!--左側の主リンクボタン-->
          <button class="navbar-toggler" type="botton" date-toggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>  <!--ユーザーログイン中に表示されるリンク-->
                <li class="nav-item dropdown">
                  <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                    <span><i class="fas fa-home"></i>Home</span>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <span><i class="fas fa-users"></i>Users</span>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <span><i class="fas fa-book-open"></i>Books</span>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <%= link_to destroy_user_session_path, class: "nav-link text-light" , method: :delete do %>
                    <span><i class="fas fa-sign-out-alt"></i>logout</span>
                  <% end %>
                </li>
              <% else %>  <!--ユーザーログアウト中に表示されるリンク-->
                <li class="nav-item dropdown">
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <span><i class="fas fa-home"></i>Home</span>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <%= link_to "/home/about", class: "nav-link text-light" do %>
                    <span><i class="fas fa-link"></i>About</span>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <span><i class="fas fa-user-plus"></i>sign up</span>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <span><i class="fas fa-sign-in-alt"></i>login</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!--成功時のフラッシュメッセージ-->
    <% if flash[:notice] %>
      <div class="text-success"><%= flash[:notice] %></div>
    <% end %>
    <!---------------------------------------->
    <div class="container">
      <div class="mt-5">
        <%= yield %>
      </div>
    </div>
    <!---------------------------------------->
    <footer class="mt-5">
      <div class="container">
        <p class="text-center">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
