<div class="row">
  <!---------------------------左画面---------------------------->
  <div class="col-lg-3">
    <%= render "users/user_info_and_new_book", new_book:@new_book, user_info:@user_info %>
  </div>

  <div class="col-lg-1">
  </div>

  <!---------------------------右画面---------------------------------->
  <div class="col-lg-8">
    <h1>Book detail</h1>
    <table class="table">
      <tr>
        <th>
          <%= link_to user_path(@book.user.id) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill,40, 40, format: "jpeg", fallback: "no_image.jpg", size:"40x40" %><br/>
            <%= @book.user.name %>
          <% end %>
        </th>
        <th>
          <%= link_to @book.title, book_path(@book.id) %>
        </th>
        <th>
          <%= @book.body %>
        </th>
        <% if @book.user.id == current_user.id %>  <!--編集・削除ボタン-->
          <th>
            <button type="button" class="btn btn-success">
              <%= link_to "Edit", edit_book_path(@book.id), class:"text-white" %>
            </button>
          </th>
          <th>
            <button type="button" class="btn btn-danger">
              <%= link_to "Destroy", book_path(@book.id), class:"text-white", method: :delete, data:{confirm:"本当に消しますか？"} %>
            </button>
          </th>
        <% end %>
      </tr>
    </table>
  </div>
</div>
