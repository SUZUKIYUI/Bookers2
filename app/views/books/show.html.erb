<!--新規投稿成功時のフラッシュメッセージ-->
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<!---------------------------左画面---------------------------->
<%= render "users/user_info_and_new_book", new_book:@new_book %>


<!---------------------------右画面---------------------------------->
<h1>Book detail</h1>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60 %>
<%= link_to @book.user.name, user_path(@book.user.id) %>
<%= link_to @book.title, book_path(@book.id) %>
<%= @book.body %>

<!--編集・削除ボタン-->
<% if @book.user.id == current_user.id %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path(@book.id), method: :delete %>
<% end %>
