<div class="row">
  <!---------------------------左画面---------------------------->
  <div class="col-lg-3">
    <%= render "users/user_info_and_new_book", new_book:@new_book, user_info:@user_info %>
  </div>

  <div class="col-lg-1">
  </div>

  <!---------------------------右画面---------------------------------->
  <div class="col-lg-8">
    <h1>Book detail</h1>
    <%= attachment_image_tag @book.user, :profile_image, :fill,40, 40, format: "jpeg", fallback: "no_image.jpg", size:"40x40" %>
    <%= link_to @book.user.name, user_path(@book.user.id) %>
    <%= link_to @book.title, book_path(@book.id) %>
    <%= @book.body %>

    <!--編集・削除ボタン-->
    <% if @book.user.id == current_user.id %>
      <button type="button" class="btn btn-success">
        <%= link_to "Edit", edit_book_path(@book.id), class:"text-white" %>
      </button>
      <button type="button" class="btn btn-danger">
        <%= link_to "Destroy", book_path(@book.id), class:"text-white", method: :delete %>
      </button>
    <% end %>
  </div>
</div>
