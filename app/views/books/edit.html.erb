<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 d-flex flex-column">
    <h1>Editing Book</h1>
    <!--------------------------------投稿失敗時のエラーメッセージ------------------------------------>
    <% if @book.errors.any? %>
      <h2 class="text-danger"><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
      <% @book.errors.full_messages.each do |error| %>
        <ul class="my-0">
          <li class="text-danger ml-5"><%= error %></li>
        </ul>
      <% end %>
    <% end %>
    <!------------------------------------------------------------------------------------------------>
    <%= form_with model:@book, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class:"w-100 px-2 py-1" %>
      </div>
      <div class="mb-3">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body, class:"w-100 px-2 py-1" %>
      </div>
      <%= f.submit "Update Book", class:"btn btn-success" %>
    <% end %>
    <div class="mt-3">
      <%= link_to "Show", book_path(@book.id) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>